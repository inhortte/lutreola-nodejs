doctype 5
html
  head
    include head
  body
    .container
      #header.span-24.round
        #estonian_flag
          a#flag_ee(href = "#")
            img(width = "29", src = "/images/estonian_flag.png")
        #english_flag
          a(id = "flag_en", href = "#")
            img(width = "28", src = "/images/british_flag.png")
        #search
          include search
        #menu
          if admin_page
            include admin/options
          else
            include options
        br.clear
        br.clear
      br.clear
      br.clear
      #subheader.span-24.round
        #breadcrumbs.round
          != breadcrumbs
        #login.round
          - if(member)
            | Welcome #{member.username}
            | &nbsp; | &nbsp;
            a(href = '/admin/map') admin
            | &nbsp; | &nbsp;              
            a(href = '/admin/logout') logout
          - else
            a(href = '/admin/login') admin
            | &nbsp; | &nbsp;            
            a(href = '#') twitter login
            | &nbsp; | &nbsp;
            a(href = '#') facebook login

      br.clear
      br.clear
      br.clear
      br.clear
      br.clear
      br.clear        
      br.clear
      br.clear
      br.clear
      br.clear
      br.clear
      br.clear        
      #necropolis.span-24.round
        if admin_page
          .span-23.last
            .hlavni
              #flash
                include flash
              #content
                h2= title
                block content
        else
          .span-6.left
            .hlavni.nopad
              include left_top
            .hlavni.nopad
              include left_middle
            .hlavni.nopad
              include left_bottom
          .span-17.right.last
            .hlavni
              #flash
                include flash
              #content
                h2= title
                block content
            #twitter.hlavni
              include twitter
        br.clear
        #footer.span-4
          include footer
