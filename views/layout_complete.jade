doctype 5
html
  head
    include head
  body
    .container
      #header.span-24.round
        #estonian_flag
          a#flag_ee(href = "#")
            img(width = "28", src = "/images/ee_flag.gif")
        #english_flag
          a(id = "flag_en", href = "#")
            img(width = "28", src = "/images/en_flag.gif")
        #search
          include search
        #menu
          if admin_page()
            include admin/options
          else
            include options
        br.clear
      br.clear
      br.clear
      #subheader.span-24.round
        #breadcrumbs.round
          include breadcrumbs
        #login.round
          - if(everyauth.loggedIn)
            | Welcome #{everyauth.twitter.user.screen_name}
            | &nbsp; | &nbsp;
            a(href = '/logout') logout
          - else
            a(href = '/member/signup') signup
            | &nbsp; | &nbsp;
            a(href = '/member/login') login
            | &nbsp; | &nbsp;            
            a(href = '/auth/twitter') twitter login
            | &nbsp; | &nbsp;
            a(href = '/auth/facebook') facebook login
      br.clear
      br.clear
      br.clear
      br.clear
      br.clear
      br.clear

      #necropolis.span-24.round
        if admin_page()
          .span-23.last
            .hlavni
              #flash
                include flash
              #content
                != body
        else if gallery_page()
          .span-23.last.nopad
            .hlavni
              include collections
            .gallery
              != body
        else
          .span-13.left
            .hlavni.nopad
              include top_left
            .span-6.left
              .hlavni.nopad
                include middle_left_one
              .hlavni.nopad
                include bottom_left_one
            .span-6.right.last
              .hlavni.nopad
                include middle_left_two
              .hlavni
              - if(everyauth.loggedIn)
                | #{everyauth.twitter.user.screen_name} may or may not be logged in
              - else
                | No one is definitely logged in
          .span-10.right.last
            .hlavni
              #flash
                include flash
              #content
                != body
            #twitter.hlavni
              //- include twitter                                                            | Twitter / Facebook

        br.clear
        #footer.span-4
          include footer
